{% include "base.html.twig" %}
{% block body %}
<main id="main" class="main">

    <div class="pagetitle">
      <h1>Mon Profil</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Etudiant</a></li>
          <li class="breadcrumb-item active">Profil</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section profile">
      <div class="row">
        <div class="col-xl-4">

          <div class="card">
            <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
              <img src="{{ publicPath ~ etudiant.image }}" alt="Profile" class="rounded">
              <h2>{{etudiant.getMatricule()}}</h2>
              <h3>Matricule</h3>
            
            </div>
          </div>

        </div>

        <div class="col-xl-8">

          <div class="card">
            <div class="card-body pt-3">
              <!-- Bordered Tabs -->

              <div class="tab-content pt-2">

                <div class="tab-pane fade show active profile-overview" id="profile-overview">
                
                  <h5 class="card-title">Détails</h5>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label ">Matricule</div>
                    <div class="col-lg-9 col-md-8">{{etudiant.getMatricule()}}</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label ">Nom</div>
                    <div class="col-lg-9 col-md-8">{{etudiant.getNom()}}</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Prenom</div>
                    <div class="col-lg-9 col-md-8">{{etudiant.getPrenom()}}</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Email</div>
                    {% if etudiant.getUser() == null %}
                    <div class="col-lg-9 col-md-8">Sans compte</div>
                    {% else %}
                    <div class="col-lg-9 col-md-8">{{etudiant.getUser().getEmail()}}</div>
                    {% endif %}
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Groupe</div>
                    {% if etudiant.getGroupe() == null %}
                    <div class="col-lg-9 col-md-8">Pas affecté(e)</div>
                    {% else %}
                    <div class="col-lg-9 col-md-8">{{etudiant.getGroupe().getLibelleG()}}</div>
                    {% endif %}
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Sexe</div>
                    {% if etudiant.getSexe() == 1 %}
                    <div class="col-lg-9 col-md-8">Femme</div>
                    {% else %}
                    <div class="col-lg-9 col-md-8">Homme</div>
                    {% endif %}
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Date de naissance</div>
                    <div class="col-lg-9 col-md-8">{{etudiant.getDateN() | date('d-m-Y')}}</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Lieu de Naissance</div>
                    <div class="col-lg-9 col-md-8">{{etudiant.getLieuN()}}</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">CIN</div>
                    <div class="col-lg-9 col-md-8">{{etudiant.getCIN()}}</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Passport</div>
                    <div class="col-lg-9 col-md-8">{{etudiant.getPassport()}}</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Telephone</div>
                    <div class="col-lg-9 col-md-8">{{etudiant.getTel()}}</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Annee Bac</div>
                    <div class="col-lg-9 col-md-8">{{etudiant.getAnneeBac()}}</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Section Bac</div>
                    <div class="col-lg-9 col-md-8">{{etudiant.getSectionBac()}}</div>
                  </div>

                  <div class="row">
                    <div class="col-lg-3 col-md-4 label">Moyenne Bac</div>
                    <div class="col-lg-9 col-md-8">{{etudiant.getMoyenneBac()}}</div>
                  </div>

                </div>
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>

        </div>
        </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->
{% endblock %}