{% include 'base.html.twig' %}
<main id="main" class="main">
{% block body %}
<div class="pagetitle">
<h1>Liste des Certifications | <small><a href="{{path('add_certif')}}">Ajouter</a></small></h1>
<nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item">Certification</li>
          <li class="breadcrumb-item active">Consulter</li>
        </ol>
      </nav>
</div>
{% for msg in app.flashes('notice') %}
{{msg}}
{% endfor %}
<div class="row">
{% for certification in lesCertifications %}
    <div class="col-sm-3">
          <div class="card">
            <img src="{{ publicPath ~ certification.image }}" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title"> {{ certification.libelleC }} </h5>
              <h6 class="card-subtitle mb-2 text-muted"> {{ certification.centre }} </h6>
              <h6 class="card-subtitle mb-2 text-muted"> {{ certification.getPack().getLibelleP() }} </h6>
              <p class="card-text">{{ certification.description }} </p>
              <a href="{{ certification.link }}" class="btn btn-light rounded-pill">Lien util</a>
              {% if is_granted('ROLE_AGENT') %}
              <a class="btn btn-info rounded-pill" href="{{ path('edit_certif', {'id':certification.id }) }}" onclick="return confirm('Êtes-vous sûr de modifier le champ d'identité {{ certification.id }}')">Modifier</a>
              <a class="btn btn-secondary rounded-pill" href="{{ path('delete_certif', {'id':certification.id }) }}" onclick="return confirm('Êtes-vous sûr de supprimer le champ d'identité {{ certification.id }}')">Supprimer</a>
              {% endif %}
            </div>
          </div>
        </div>
{% endfor %}
    </div>
</main><!-- End #main -->
{% endblock %}
